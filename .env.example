# reki-gao 環境設定ファイル例
# このファイルを .env にコピーして使用してください

# アプリケーション設定
APP_NAME=reki-gao
APP_VERSION=1.0.0
DEBUG=false

# API設定
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# ファイル処理設定
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=temp/uploads

# 顔認識設定
FACE_CONFIDENCE_THRESHOLD=0.8
FACE_VECTOR_DIMENSION=128
MAX_FACES_PER_IMAGE=5

# 検索設定
SIMILARITY_SEARCH_K=5
SIMILARITY_THRESHOLD=0.6

# データ設定
DATA_DIR=data
GANBO_COLLECTION_DIR=data/ganbo_collection
FAISS_INDEX_PATH=data/face_vectors.index
METADATA_PATH=data/metadata.json

# 外部API設定
CODH_API_BASE_URL=https://codh.rois.ac.jp/face/api

# タイムアウト設定
FACE_PROCESSING_TIMEOUT=30
API_REQUEST_TIMEOUT=60

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 開発用設定
RELOAD=true